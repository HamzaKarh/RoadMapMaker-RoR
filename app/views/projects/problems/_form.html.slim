= form_with(model: [@project, @problem]) do |f|
  - if @problem.errors.any?
    #error_explanation
      h2 = "#{pluralize(@problem.errors.count, "error")} Interdire ce problème d'être sauvegardé:"
      ul
        - @problem.errors.full_messages.each do |message|
          li = message
  .field
    = f.label :Nom
    = f.text_field :name

  .field
    = f.label :Description
    = f.text_field :description


  .actions = f.submit


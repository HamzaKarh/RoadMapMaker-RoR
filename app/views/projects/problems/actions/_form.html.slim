= form_with(model: [@action.problem.project, @action.problem, @action])do |f|
  - if @action.errors.any?
    #error_explanation
      h2 = "#{pluralize(@action.errors.count, "error")} Interdire cette action d'être sauvegardée:"
      ul
        - @action.errors.full_messages.each do |message|
          li = message


  .field
    = f.label :Nom
    = f.text_field :name

  .field
    = f.label :Description
    = f.text_area :description


  .actions = f.submit

